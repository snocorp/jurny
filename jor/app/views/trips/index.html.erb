<h1>Listing trips</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= link_to trip.name, trip %></td>
    <td><%= link_to trip.owner.fullname, traveller_path(trip.owner) %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %> |
    <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trip', new_trip_path %>
