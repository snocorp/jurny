<% provide(:title, 'travellers') %>
<h1>Travellers</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @travellers.each do |traveller| %>
  <tr>
    <td><%= link_to traveller.fullname, traveller %></td>
    <td><%= traveller.email %></td>
    <td><%= link_to 'Edit', edit_traveller_path(traveller) %> |
    <%= link_to 'Destroy', traveller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Traveller', new_traveller_path %>
